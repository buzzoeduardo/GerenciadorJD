@model GerenciadorSJD.Models.Policia
@{
    ViewData["Title"] = "Novo";
    List<Processo> processo = new List<Processo>();
}

<h1>@ViewData["Title"]</h1>

<h4>Policial Militar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Re" class="form-label"></label>
                <input asp-for="Re" class="form-control" autofocus="" tabindex="0" />
                <span asp-validation-for="Re" class="text-danger"></span>
            </div>           

            <div class="form-group">
                <label asp-for="Digito" class="form-label mt-3"></label>
                <input asp-for="Digito" class="form-control text-uppercase" />
                <span asp-validation-for="Digito" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="form-label mt-3"></label>
                <input asp-for="Nome" class="form-control text-uppercase" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NomeGuerra" class="form-label mt-3"></label>
                <input asp-for="NomeGuerra" class="form-control text-uppercase" />
                <span asp-validation-for="NomeGuerra" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="PostGrad" class="form-label mt-3"></label>
                <select asp-for="PostGrad" asp-items="Html.GetEnumSelectList<GerenciadorSJD.Models.Enums.PostGrad>()" class="form-select">
                    <option selected="selected" value="">Selecionar</option>
                </select>
                <span asp-validation-for="PostGrad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label mt-3"></label>
                <input asp-for="Email" class="form-control text-lowercase" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="form-label mt-3"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<GerenciadorSJD.Models.Enums.Status>()" class="form-select ">
                    <option selected="selected" value="">Selecionar</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

           

            <br />
            <div class="form-group">
               
                <button type="submit" class="btn btn-outline-primary">Salvar</button>
                <button type="reset" class="btn btn-outline-dark ms-2">Limpar</button>
                <a asp-action="Index" class="btn btn-outline-dark ms-sm-6">Retornar</a>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
